@{
    ViewBag.Title = "Contact";
}


<body>

    <h2>Contact</h2>

    <div class="jumbotron">
        <strong>Phone: </strong>(555) 555-5555 <br />
        <strong>Email: </strong>ouremail@thebomb.com<br />
    </div>

    <div class="jumbotron">
        <div class="container contact">
            <div class="row">
                <center>
                    <div class="contact-info" style="background-color:steelblue; border-radius:10px">
                        <br />
                        <img src="https://image.ibb.co/kUASdV/contact-image.png" alt="image" />
                        <h2>Contact Us</h2>
                        <h4>We would love to hear from you!</h4>
                        <br />
                    </div>
                </center>
                <br />
                <div class="contact-form">
                    <div class="form-group col-md-4">
                        <label class="control-label" for="fname">First Name:</label>
                        <div>
                            <input type="text" class="form-control" id="fname" placeholder="Enter First Name" name="fname">
                        </div>
                    </div>
                    <div class="form-group col-md-8">
                        <label class="control-label" for="lname">Last Name:</label>
                        <div>
                            <input type="text" class="form-control" id="lname" placeholder="Enter Last Name" name="lname">
                        </div>
                    </div>

                    <div class="form-group col-md-12">
                        <label class="control-label" for="email">Email:</label>
                        <div>
                            <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label" for="email">Subject:</label>
                        <div>
                            <select class="form-control" placeholder="Select a subject" name="subject">
                                <option value="service">Request services</option>
                                <option value="inquiry">Customer inquiries</option>
                                <option value="complain">File a complaint</option>
                            </select>
                        </div>
                    </div>
                    <div class=" col-md-12">
                        <label class="control-label" for="comment">Comment:</label>
                        <div>
                            <textarea class="form-control" id="comment" ></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

